<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<%= search_form_for @q, html: { class: "form-inline pull-right" } do |f| %>
  <div class="form-group">
    <%= f.search_field :name_or_isbn_cont, class: "form-control" %>
  </div>
  <%= f.submit 'Search', class: 'btn btn-submit' %>
<% end %>

<%= link_to 'New Book', new_book_path, class: "btn btn-primary pull-right", style: "margin-right: 10px;" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th style="width: 300px;">Name</th>
      <th>Isbn</th>
      <th>Rate</th>
      <th>Quantity</th>
      <th>Last Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.isbn %></td>
        <td><%= book.rate %></td>
        <td><%= book.quantity %></td>
        <td><%= book.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @books %>
</div>
